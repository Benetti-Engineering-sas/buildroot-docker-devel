# Specify a buildroot user. This must be without quotes.
BUILDROOT_USER=br-user

# Specify a buildroot directory. This must be without quotes.
BUILDROOT_DIR=buildroot

# A space deliminated string of company names.
# WARNING: DO NOT ADD QUOTES AROUND THIS STRING.
COMPANY_NAMES=my_company

# Build verbosely
# BR_ is appended to verbose to avoid environment conflicts with packages that
# may use the VERBOSE environment variable.
BR_VERBOSE=1

# Remove everything in my_company/output and start fresh.
CLEAN_ALL=0

# Apply all configs in my_company/configs and build every single config.
BUILD_ALL=0

# A space seperated list of configs to build.
# WARNING: DO NOT ADD QUOTES AROUND THIS STRING.
BUILD_LIST=my_company


# Set to 0 if you do not wish to exit after building.
EXIT_AFTER_BUILD=1
